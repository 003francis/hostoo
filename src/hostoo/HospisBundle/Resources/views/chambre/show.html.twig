{% extends 'hostooSanteBundle::blank.html.twig' %}

{% block menu %}
    {% include 'hostooUserBundle:menus:menuadmin.html.twig' %}
{% endblock %}
{% block body %}
    <h1>Chambre</h1>
<div class="card-box">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chambre.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ chambre.libelle }}</td>
            </tr>
            <tr>
                <th>Nombredeslits</th>
                <td>{{ chambre.nombreDesLits }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-unstyled list-inline">
        <li>
            <a href="{{ path('chambre_index') }}" class="btn btn-info">Liste</a>
        </li>
        <li>
            <a href="{{ path('chambre_edit', { 'id': chambre.id }) }}" class="btn btn-warning">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
