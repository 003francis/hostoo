{% extends 'hostooSanteBundle::blank.html.twig' %}
{% block menu %}
    {% if is_granted('ROLE_MEDECIN') %}
        {% include 'hostooSanteBundle:menus:menudoc.html.twig' %}
    {% elseif  is_granted('ROLE_INFIRMIER') %}
        {% include 'hostooSanteBundle:menus:menunrs.html.twig' %}
    {% endif %}
{% endblock %}
{% block body %}
    <h1>Tour list</h1>
<div class="card-box">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datetour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tour in tours %}
            <tr>
                <td><a href="{{ path('hospitalisation_tour_show', { 'id': tour.id }) }}">{{ tour.id }}</a></td>
                <td>{% if tour.datetour %}{{ tour.datetour|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('hospitalisation_tour_show', { 'id': tour.id }) }}">Afficher</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
