    <div class="row">
        <div class="col-lg-3 col-md-6">
            <a href="{{ path('examens_labo',{'tag': 'exd'}) }}">
            <div class="card-box widget-user">
                <div class="text-center">
                    <h2 class="text-custom" data-plugin="counterup">{{ exd.total }}</h2>
