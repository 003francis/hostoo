{% extends 'hostooSanteBundle::blank.html.twig' %}
{% block menu %}
    <li class="">
        <a href="{{ path('hostoo_sante_patientsattente') }}" class="waves-effect"><i class="fa fa-list-alt"></i> <span>Fil d'attente</span> <span class="menu-arrow"></span> </a>
    </li>
{% endblock %}
{% block body %}
    <h3>Liste des visas</h3>
<div class="card-box">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>N</th>
                <th>Date</th>
                <th>Montantusd</th>
                <th>Code</th>
                <th>Beneficiaire</th>
                <th>Auteur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for visa in visas %}
            <tr>
                <td><a href="{{ path('visa_show', { 'id': visa.id }) }}">{{ visa.id }}</a></td>
                <td>{% if visa.datevisa %}{{ visa.datevisa|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ visa.montantUsd }}</td>
                <td>{{ visa.code }}</td>
                <td>{{ visa.patient }}</td>
                <td>{{ visa.auteur }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('visa_show', { 'id': visa.id }) }}">afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('visa_edit', { 'id': visa.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-unstyled">
        <li>
            <a href="{{ path('visa_new') }}" class="btn btn-default">Nouveau Visa</a>
        </li>
    </ul>
</div>
{% endblock %}
