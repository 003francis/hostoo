{% extends 'hostooSanteBundle::blank.html.twig' %}
{% block titrepage %} Médécins disponibles{% endblock %}
{% block body %}
{% if rdvs==null %}
    <h2 class="alert alert-danger alert-dismissable text-center">Aucun Rendez-vous Disponible!</h2>
{% else %}
    <ul class="list-unstyled">
    {% for rdv in rdvs %}
        <li class="col-xs-3 col-sm-4">
            <legend class="center-block">Dr.{{ rdv.medecin.nom }}</legend>
            <div class="col-lg-12">Disponibilité : {% if rdv.disponibilite == true %}<button class="btn-sm btn-success"
                ><i class="fa fa-check-circle fa-2x"></i> </button>{% else %}<button class="btn-sm btn-danger"></button>{% endif %}</div>
            <div class="col-lg-12"><button class="btn-lg btn-custom"><i class="fa fa-users"></i> Service : {{ rdv.medecin.service.nomservice }}</button></div>
            <div class="col-lg-12"><button class="btn-lg btn-custom"><i class="fa fa-clock-o"></i> Patients en attente : {{ rdv.Rdvspatients.count }}</button></div>
            <div class="col-lg-12"><button class="btn-lg btn-custom"><i class="fa fa-check"></i> Patients consultés : {{ rdv.patientsrecus }}</button></div>
            {% set coche=0 %}
            {% for cle in rdv.Rdvspatients %}
            {% if cle.episode.id == patient.id %}
                {% set coche=1 %}
                {% endif %}
            {% endfor %}
            {% if coche==0 %}
            <a href="{{ path('hostoo_rdv_attrrdv',{'id':rdv.id,'episode':patient.id }) }}" class="btn orange">Attribuer</a>
                {% else %}
                    <a href="{{ path('hostoo_rdv_oterrdv',{'id':rdv.id,'episode':patient.id }) }}" class="btn btn-danger">Oter</a>
            {% endif %}
        </li>
    {% endfor %}
{% endif %}
{% endblock %}